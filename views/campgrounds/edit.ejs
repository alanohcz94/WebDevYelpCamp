<% layout('layout/viewTemplates') %>
<div class="row">
    <h1 class="text-center">Edit Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds/<%= campground._id%>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Edit Name:</label>
                <input class="form-control" type="text" id="title" name="campground[title]"  value="<%= campground.title %>" required>
                <div class="valid-feedback">Nice !</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Edit Location:</label>
                <input class="form-control" type="text" id="location" name="campground[location]" value="<%= campground.location %>" required>
                <div class="valid-feedback">Nice !</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Edit Price:</label>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" name="campground[price]" value="<%= campground.price %>" id="price" class="form-control" placeholder="0.00" aria-label="price" aria-describedby="price-label" required>
                    <div class="valid-feedback">Nice !</div>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Edit Description:</label>
                <textarea class="form-control" type="text" id="description" name="campground[description]" required ><%= campground.description %></textarea>
                <div class="valid-feedback">Nice !</div>
            </div>
            <div class="mb-3">
                <div class="form-file custom-file">
                    <input type="file" class="form-file-input" id="image" name="image" multiple>
                    <label class="form-file-label" for="image">
                        <span class="form-file-text custom-file-label">Choose Campgroumd image(s)...</span>
                        <span class="form-file-button">Browse</span>
                    </label>
                </div>
            </div>
            <div class="mb-3">
                <% campground.image.forEach(function(img, i){ %>
                    <img src="<%= img.thumbnail %>" alt="" class="img-thumbnail">
                    <div class="form-check-inline">
                        <input type="checkbox" id="image-<%= i %>" name="deleteImages[]" value="<%=img.filename%>">
                    </div>
                    <label for="image-<%= i %>">Delete?</label>
                <% }) %>
            </div>
            <div class=""md-3>
                <button class="btn btn-info">Update</button>
            </div>
        </form>
        <div class="mt-3">
            <a class="btn btn-info" type="button" href="/campgrounds/<%= campground._id %>">Cancel </a>
        </div>
    </div>
</div>
<br>

